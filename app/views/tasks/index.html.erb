<!-- vue du controleur de taches liee à la methode <--><!-- index -->

<h1>To-do List</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <h2><%= task.name %></h2>
    <p>Fait : <%= task.done %></p>
    <%= link_to "Détails", task_path(task.id) %>
    <%= link_to "Modifier", edit_path(task.id) %>
    <%= link_to "Supprimer", destroy_path(task.id), method: :delete %>
     </li>
  <% end %>
</ul>
